# Django Settings
# ===============

# Set to False in production
# Default: True
DEBUG=True

# A secret key for a particular Django installation.
# Generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Comma-separated list of allowed hosts
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# =====================

# SQLite (default)
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# For PostgreSQL/MySQL, uncomment and modify as needed:
# DB_ENGINE=django.db.backends.postgresql  # or django.db.backends.mysql
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432  # 3306 for MySQL

# Email Configuration
# ==================

# Email Backend (use console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # Uncomment for development

# SMTP Configuration (for Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-generated-app-password

# Email Sender Information
DEFAULT_FROM_EMAIL=noreply@yourdomain.com  # Will be used as the 'from' address

# Site Configuration
# =================

# Base URL for generating absolute URLs (no trailing slash)
SITE_URL=http://localhost:8000

# Email Verification
# =================

# Number of days the email verification link is valid
EMAIL_VERIFICATION_EXPIRE_DAYS=7

# Default email address for sending emails
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Static and Media Files
# =====================

# Base URL to use when referring to static files
STATIC_URL=/static/

# Absolute path to the directory static files should be collected to
STATIC_ROOT=staticfiles/

# URL that handles the media served from MEDIA_ROOT
MEDIA_URL=/media/

# Absolute filesystem path to the directory that will hold user-uploaded files
MEDIA_ROOT=media/

# Security
# ========

# Set to True to avoid transmitting the session cookie over HTTP accidentally
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Set to True to avoid transmitting the CSRF cookie over HTTP accidentally
CSRF_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Set to True to force HTTPS in production
SECURE_SSL_REDIRECT=False  # Set to True in production with HTTPS
